<!DOCTYPE html>
<html>
<head>
  <title>Suma de dos números</title>
  
  <style>
    .center-text {
      text-align: center;
    }

    .form-input {
      font-size: 20px; /* Tamaño de fuente aumentado */
      text-align: center; /* Centra el texto en las formas */
    }

    /* Estilo para centrar el contenido */
    #html2pdf {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Estilo para ajustar el espacio del contenedor del botón */
    .button-container {
      margin-right: 10px;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.8.0/html2pdf.bundle.min.js" integrity="sha512-w3u9q/DeneCSwUDjhiMNibTRh/1i/gScBVp2imNVAMCt6cUHIw6xzhzcPFIaL3Q1EbI2l+nu17q2aLJJLo4ZYg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    function sumarNumeros() {
      var num1 = parseInt(document.getElementById("numero1").value);
      var num2 = parseInt(document.getElementById("numero2").value);
      var num3 = parseInt(document.getElementById("numero3").value);
      var num4 = parseInt(document.getElementById("numero4").value);
      var num5 = parseInt(document.getElementById("numero5").value);
      var num6 = parseInt(document.getElementById("numero6").value);
      var num7 = parseInt(document.getElementById("numero7").value);
      var num8 = parseInt(document.getElementById("numero8").value);
      var resultado = num1 + num2 + num3 + num4 + num5 + num6;
      var rad = parseFloat(document.getElementById("numero9").value);
      var promedio = resultado / 6;
      var consumodiario = (promedio / 30) * 1000;
      var cantidadpanel = (1.3 * consumodiario) / (rad * num7);
      var redondeo = Math.ceil(cantidadpanel);
      var inversor = redondeo * num7;
      var ahorro = num8;
      var ahorromensual = num7 * ((ahorro/100) * 12 * 30 *redondeo)/1000;
      document.getElementById("pan5").innerHTML = "Los Datos Obtenidos son: ";
      document.getElementById("resultado2").innerHTML = "La Carga de los 6 meses es: " + resultado;
      document.getElementById("rad").innerHTML = "El radiación solar es: " + rad + "KWH/m^2";
      document.getElementById("promedio2").innerHTML = "El Promedio de la Carga Total es: " + promedio + "KW";
      document.getElementById("pan2").innerHTML = "La Potencia de tu panel es: " + num7 + "W";
      document.getElementById("pan3").innerHTML = "La cantidad de paneles a usar es: " + redondeo;
      document.getElementById("pan4").innerHTML = "El inversor a usar es de " + inversor + "W";
      document.getElementById("pan6").innerHTML = "Eficiencia: " + ahorro + "%";
      document.getElementById("pan19").innerHTML = "Ahorro mensual: " + ahorromensual + "KWH";
      // Mostrar opción dependiendo del valor de num7
      if (num7 >= 100 && num7 <= 300) {
        opcion.innerHTML = "El costo de su panel ronda de 90 a 300 dólares";
      } else if (num7 > 300 && num7 <= 500) {
        opcion.innerHTML = "El costo de su panel ronda los 200 a 600 dólares";
      } else if (num7 > 600 && num7 <= 900) {
        opcion.innerHTML = "El costo de su panel ronda los 500 a 900 dólares";
      } else {
        opcion.innerHTML = "El costo de su panel es superior a los 1000 dolares";
      }

    }

    function exportarPDF() {
      var element = document.getElementById('html2pdf');
      var opt = {
        margin:       1,
        filename:     'myfile.pdf',
        image:        { type: 'jpeg', quality: 10 },
        html2canvas:  { scale: 2 },
        jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
      };
      html2pdf().set(opt).from(element).save();
    }
  </script>
</head>
<body class="center-text">
  <div class="wrapper">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="background: linear-gradient(to bottom, rgb(218, 12, 33), rgb(24, 50, 201), orange)">
        <div id="html2pdf">
      <h1 class="center-text">Cálculos Generales Para Su Instalación Fotovoltaica</h1> 
      
        <input type="number" id="numero1" class="form-input" placeholder="Primer mes">
        <br>
        <input type="number" id="numero2" class="form-input" placeholder="Segundo mes">
        <br>
        <input type="number" id="numero3" class="form-input" placeholder="Tercer mes">
        <br>
        <input type="number" id="numero4" class="form-input" placeholder="Cuarto mes">
        <br>
        <input type="number" id="numero5" class="form-input" placeholder="Quinto mes">
        <br>
        <input type="number" id="numero6" class="form-input" placeholder="Sexto mes">
        <br>
        <input type="number" id="numero7" class="form-input" placeholder="Potencia del panel">
        <br>
        <input type="number" id="numero8" class="form-input" placeholder="Ahorro ">
        <br>
        <input type="number" id="numero9" class="form-input" placeholder="Radiacion solar ">
        <br>
        <button onclick="sumarNumeros()">Calcular</button>
        <br>
        <p id="pan5" class="center-text"></p>
        <p id="resultado2" class="center-text"></p>
        <p id="rad" class="center-text"></p>
        <p id="promedio2" class="center-text"></p>
        <p id="pan2" class="center-text"></p>
        <p id="pan3" class="center-text"></p>
        <p id="pan4" class="center-text"></p>
        <p id="opcion" class="center-text"></p>
        <p id="pan6" class="center-text"></p>
        <p id="pan7" class="center-text"></p>
        <p id="pan19" class="center-text"></p>
      </div>
      <div class="button-container">
        <button style="padding: 10px;" id="exportPDF" onclick="exportarPDF()">Exportar Documento PDF</button>
        <script>
        let htmlPDF = document.getElementById("html2pdf");
        let exportPDF = document.getElementById("exportPDF");
        exportPDF.onclick = (e) => html2pdf(htmlPDF)
    </script>
      </div>
    </div>
  </div>
</body>
</html>
